@model List<ResultUserDto>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;

}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div style="display:flex!important;justify-content:space-between!important">
                    <p>Kategori ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                    <a class="btn btn-success" href="/Admin/Category/CreateCategory/">Yeni Kategori Ekle</a>
                </div>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <table class="table table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Kullanıcı Adı</th>
                                <th>Email</th>
                                <th>Adres Detayı</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name @item.Surname</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td><a href="/Admin/User/UserAddressInfo/@item.Id" class="btn btn-primary">Adres Detayı</a></td>

                                </tr>
                            }

                        </tbody>
                    </table>


                </div>
            </div>
        </div>

    </div>
</section>

