@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">

                <p>Kategori ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Kategoriye Ait Ürünler</th>
                                <th>Sil</th>
                                <th>Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                            <tr>
                                <th scope="row">@item.CategoryId</th>
                                <td>@item.CategoryName</td>
                                    <td><a class="btn btn-info" href="">Kategoriye Ait Ürünler</a></td>
                                    <td><a class="btn btn-danger" href="/Admin/Category/DeleteCategory/@item.CategoryId">Sil</a></td>
                                    <td><a class="btn btn-warning" href="/Admin/Category/UpdateCategory/@item.CategoryId">Güncelle</a></td>
                            </tr>
                            }
                           
                        </tbody>
                    </table>
                    <br />
                    <a class="btn btn-success" href="/Admin/Category/CreateCategory/">Yeni Kategori Ekle</a>
                </div>
            </div>
        </div>

    </div>
</section>