@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Güncelleme</h4>
                <p>Kategori güncelleme işlemini aşağıdaki formu doldurarak yapabilirsiniz.</p>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <div class="form-group">

                            <input asp-for="CategoryId" readonly type="hidden" class="form-control"  >

                        </div>
                        <div class="form-group">
                            <label for="inputCategoryName">Kategori Adı</label>
                            <input asp-for="CategoryName" type="text" class="form-control" id="inputCategoryName" >
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="inputImageUrl">Kategori Görseli</label>
                            <input asp-for="ImageUrl" type="text" class="form-control" id="inputImageUrl">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-success">Kategoriyi Güncelle</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</section>

