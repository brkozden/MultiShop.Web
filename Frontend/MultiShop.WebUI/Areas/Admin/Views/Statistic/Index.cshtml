
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}
<br />
<br />
<br />

<section class="content container-fluid">
    <div class="row">
        <div class="col-lg-6 col-xs-6">
            <div class="media-box bg-sea">
                <div class="media-icon pull-left"><i class="icon-bargraph"></i> </div>
                <div class="media-info">
                    <h5>En Ucuz Ürün</h5>
                    <h4>@ViewBag.minPriceProductName</h4>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-xs-6">
            <div class="media-box bg-green">
                <div class="media-icon pull-left"><i class="icon-basket"></i> </div>
                <div class="media-info">
                    <h5>En Pahalı Ürün</h5>
                    <h4>@ViewBag.maxPriceProductName</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-xs-6">
            <div class="media-box">
                <div class="media-icon pull-left"><i class="icon-bargraph"></i> </div>
                <div class="media-info">
                    <h5>Marka Sayısı</h5>
                    <h3>@ViewBag.brandCount</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-xs-6">
            <div class="media-box bg-sea">
                <div class="media-icon pull-left"><i class="icon-wallet"></i> </div>
                <div class="media-info">
                    <h5>Kategori Sayısı</h5>
                    <h3>@ViewBag.categoryCount</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-xs-6">
            <div class="media-box bg-blue">
                <div class="media-icon pull-left"><i class="icon-basket"></i> </div>
                <div class="media-info">
                    <h5>Ürün Sayısı</h5>
                    <h3>@ViewBag.productCount</h3>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-4 col-xs-6">
            <div class="media-box">
                <div class="media-icon pull-left"><i class="icon-bargraph"></i> </div>
                <div class="media-info">
                    <h5>Toplam Kullanıcı Sayısı</h5>
                    <h3>@ViewBag.userCount</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-xs-6">
            <div class="media-box bg-sea">
                <div class="media-icon pull-left"><i class="icon-wallet"></i> </div>
                <div class="media-info">
                    <h5>Aktif Yorum Sayısı</h5>
                    <h3>@ViewBag.activeCommentCount</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-xs-6">
            <div class="media-box bg-blue">
                <div class="media-icon pull-left"><i class="icon-basket"></i> </div>
                <div class="media-info">
                    <h5>Pasif Yorum Sayısı</h5>
                    <h3>@ViewBag.passiveCommentCount</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-xs-6">
            <div class="media-box">
                <div class="media-icon pull-left"><i class="icon-bargraph"></i> </div>
                <div class="media-info">
                    <h5>Toplam Yorum Sayısı</h5>
                    <h3>@ViewBag.totalCommentCount</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-xs-6">
            <div class="media-box bg-sea">
                <div class="media-icon pull-left"><i class="icon-wallet"></i> </div>
                <div class="media-info">
                    <h5>Mesaj Sayısı</h5>
                    <h3>@ViewBag.totalMessageCount</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-xs-6">
            <div class="media-box bg-blue">
                <div class="media-icon pull-left"><i class="icon-basket"></i> </div>
                <div class="media-info">
                    <h5>İndirim Kuponu Sayısı</h5>
                    <h3>@ViewBag.discountCouponCount</h3>
                </div>
            </div>
        </div>
    </div>

</section>

