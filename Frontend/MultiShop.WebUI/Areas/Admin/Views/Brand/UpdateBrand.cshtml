@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Marka Güncelleme</h4>
                <p>Marka güncelleme işlemini aşağıdaki formu doldurarak yapabilirsiniz.</p>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <div class="form-group">

                            <input asp-for="BrandId" readonly type="hidden" class="form-control">

                        </div>
                        <div class="form-group">
                            <label for="inputBrandName">Marka Adı</label>
                            <input asp-for="BrandName" type="text" class="form-control" id="inputBrandName">
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="inputImageUrl">Marka Görseli</label>
                            <input asp-for="ImageUrl" type="text" class="form-control" id="inputImageUrl">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-success">Markayı Güncelle</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</section>


