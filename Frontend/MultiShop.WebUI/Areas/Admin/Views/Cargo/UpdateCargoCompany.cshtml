@model UpdateCargoCompanyDto
@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Firması Güncelleme</h4>
                <p>Kargo Firması güncelleme işlemini aşağıdaki formu doldurarak yapabilirsiniz.</p>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <div class="form-group">

                            <input asp-for="CargoCompanyId" readonly type="hidden" class="form-control">

                        </div>
                        <div class="form-group">
                            <label for="inputCargoCompanyName">Kargo Firması Adı</label>
                            <input asp-for="CargoCompanyName" type="text" class="form-control" id="inputCargoCompanyName">
                        </div>
                        <br />
                       
                        <button type="submit" class="btn btn-success">Kargo Firmasını Güncelle</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</section>


