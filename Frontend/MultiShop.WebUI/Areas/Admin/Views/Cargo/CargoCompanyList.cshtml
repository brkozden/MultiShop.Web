@model List<ResultCargoCompanyDto>
@{
    ViewData["Title"] = "CargoCompanyList";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div style="display:flex!important;justify-content:space-between!important">
                    <p>Kargo firmaları ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                    <a class="btn btn-success" href="/Admin/Cargo/CreateCargoCompany/">Yeni Kargo Firması Ekle</a>
                </div>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <table class="table table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th>#</th>
                                <th>Kargo Firması Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.CargoCompanyName</td>
                                    <td><a class="btn btn-danger" href="/Admin/Cargo/DeleteCargoCompany/@item.CargoCompanyId">Sil</a></td>
                                    <td><a class="btn btn-primary" href="/Admin/Cargo/UpdateCargoCompany/@item.CargoCompanyId">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>
            </div>
        </div>

    </div>
</section>

