@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div style="display:ruby-text">
                    <p>Hakkında bilgisi ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                    <a class="btn btn-success" href="/Admin/About/CreateAbout/">Hakkında Bilgisi Ekle</a>
                </div>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <table class="table table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th>Adres</th>
                                <th>Açıklama</th>
                                <th>Mail</th>
                                <th>Telefon</th>
                                <th>Sil</th>
                                <th>Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Address</td>
                                    <td>@item.Description</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td><a class="btn btn-danger" href="/Admin/About/DeleteAbout/@item.AboutId">Sil</a></td>
                                    <td><a class="btn btn-primary" href="/Admin/About/UpdateAbout/@item.AboutId">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>
            </div>
        </div>

    </div>
</section>


