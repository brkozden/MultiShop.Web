@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    var tableRowColors = new List<string> { "table-info", "table-warning", "table-danger", "table-success", "table-primary", "table-dark", "table-secondary" };
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişi</h4>
                        <p class="card-description">
                            <code>Geçmiş siparişleriniz burada görüntülenir.</code>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Toplam Fiyat
                                        </th>
                                        <th>
                                            Sipariş Tarihi
                                        </th>
                                        <th>
                                        
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)

                                    {

                                        var item = Model[i];

                                        var rowColor = tableRowColors[i % tableRowColors.Count];

                                        <tr class="@rowColor">

                                            <th>@(i + 1)</th>

                                            <td>@item.TotalPrice</td>

                                            <td>@item.OrderDate.ToString("dd-MMM-yyyy") - @item.OrderDate.ToShortTimeString()</td>

                                            <td><a href="#" class="btn btn-warning">Sipariş Detayları</a></td>

                                        </tr>

                                    }
                                  
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
