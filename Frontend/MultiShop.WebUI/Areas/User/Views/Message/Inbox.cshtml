@model List<ResultInboxMessageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gelen Mesajlar</h4>
                        <p class="card-description">
                            <code>Gelen mesajlar burada görüntülenir.</code>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Gönderen
                                        </th>
                                        <th>
                                            Konu
                                        </th>
                                        <th>
                                            Tarih
                                        </th>
                                        <th>
                                            Saat
                                        </th>
                                        <th>
                                            Durum
                                        </th>
                                        <th>
                                            Sil
                                        </th>
                                        <th>
                                            Oku
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                    {


                                        count++;

                                        <tr >

                                            <th>@count</th>
                                            <td>@item.SenderId</td>
                                            <td>@item.Subject</td>
                                            <td>@item.MessageDate.ToString("dd-MMM-yyyy") </td>
                                            <td> @item.MessageDate.ToShortTimeString()</td>
                                            <td>@item.IsRead</td>
                                            <td><a href="#" class="btn btn-danger">Sil</a></td>
                                            <td><a href="#" class="btn btn-success">Oku</a></td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


