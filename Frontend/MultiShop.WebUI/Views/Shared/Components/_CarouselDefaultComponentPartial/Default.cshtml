<div class="container-fluid mb-3 ">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#header-carousel" data-slide-to="1"></li>
                    <li data-target="#header-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item position-relative active" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="https://wallpapers.com/images/high/suit-1920-x-1080-picture-0vbyk5yxrbmafklw.webp" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Erkek Giyim</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">En Yeni Moda Erkek Giyim Ürünleriyle Tarzını Yansıt</p>
                                <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Şimdi Keşfet</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="https://wallpapers.com/images/high/trendy-women-s-clothing-store-o1hw41upaeojuonq.webp" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Kadın Giyim</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Seni Baştan Yaratacak Kıyafetlerle Dolabını Yenile</p>
                                <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Şimdi Keşfet</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="https://wallpapers.com/images/high/shoe-circle-of-friends-utkm7ug76z8boaiv.webp" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Ayakkabılar</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Attığın Her Adımda Tarzınla Ön Plana Çıkacak Ayakkabılar</p>
                                <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Şimdi Keşfet</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            @await Component.InvokeAsync("_SpecialOfferDefaultComponentPartial")
        </div>
    </div>
</div>