
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Default/Index/">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="/Products/Index/">Ürünler</a>
                <span class="breadcrumb-item active">Ürün Listesi</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row px-xl-5">

        <div class="col-lg-3 col-md-4">

            @await Component.InvokeAsync("_ProductPriceFilterComponentPartial")
            
            @await Component.InvokeAsync("_ProductColorFilterComponentPartial")

            @await Component.InvokeAsync("_ProductSizeFilterComponentPartial")

         
        </div>
   
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">

                @await Component.InvokeAsync("_ProductGetProductCountComponentPartial")

                @await Component.InvokeAsync("_ProductListComponentPartial",new{categoryId = ViewBag.categoryId})

                @await Component.InvokeAsync("_ProductPaginationComponentPartial")

             
            </div>
        </div>
  
    </div>
</div>

