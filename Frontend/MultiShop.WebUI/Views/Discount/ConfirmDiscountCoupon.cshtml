<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon" method="post">
        <div class="input-group">
            <input type="text" name="code" value="@ViewBag.Code" class="form-control border-0 p-4" placeholder="Kupon Kodu">
            <div class="input-group-append">
                <button class="btn btn-primary">Kuponu Uygula</button>
            </div>

          

        </div>
        @if (@ViewBag.DiscountRate == null || @ViewBag.DiscountRate == 0)
        {
            <div class="text-nowrap ">
             
            </div>
        }
   
        else 
        {
            <div class="text-nowrap " style="width: 8rem; color:red">
                @ViewBag.Code İndirim Kodu Uygulandı.
            </div>
        }
      
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-1">
                <h6>Ürün Fiyatı</h6>
                <h6>@ViewBag.Total ₺</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">Kdv Tutarı</h6>
                <h6 class="font-weight-medium">@ViewBag.Tax ₺</h6>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h6>İndirim Oranı</h6>
                <h6>%@ViewBag.DiscountRate</h6>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h6>İndirim Tutarı: </h6>
              
                <h6 class="text-danger">@ViewBag.DiscountAmount</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>Toplam:</h5>
                <h5>@ViewBag.TotalPriceWithTax ₺</h5>
            </div>
          
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Siparişi Tamamla</button>
        </div>
     
    </div>
</div>